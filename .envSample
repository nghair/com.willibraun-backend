#SIT = development, UAT=testing, PROD=production
ENVIRONMENT=SIT 

#MYSQL DATABASE
#ONLY FOR SIT PURPOSE TO CREATE DATABASE USING DOCKER. DELETE IT 'UAT' OR 'PROD'
MYSQL_ROOT_PASSWORD={DATABASE_ROOT_PASSWORD}
MYSQL_DATABASE={DATABASE_NAME}
#LOCAHOST OR   127.0.0.1 FOR LOCAL DATABASE SERVER. OTHERWISE ENTER DATABASE HOST IP/URL
MYSQL_HOST={DATABASE_HOST}
#MYSQL defaul port = 3306
MYSQL_PORT={DATABASE_PORT}
MYSQL_USERNAME={DATABASE_USERNAME}
MYSQL_PASSWORD={DATABASE_PASSWORD}
#ONLY IN SIT. REMOVE FOR UAT and PROD. FOR UAT AND PROD DO DATABASE MIGRATION.
MYSQL_SYNCHRONIZE=true

#########################################
#               JWT AUTHORIZATION
#########################################
#SECRET FOR SIGNING JWT ACCESS & REFRESH TOKENS. KEEP IT SECURE
AT_SECRET=123456789
RT_SECRET=123456789


#########################################
#               EMAILER
#########################################
SMTP_HOST={SMTP_HOST_NAME}
SMTP_USER={EMAIL_USER_NAME}
SMTP_PASS={EMAIL_USER_PASS}
MAIL_FROM={EMAIL_FROM_ADDRESS}
